# --- Auth ---
auth_method = "sa"  # или "oauth"

# Если 'sa' (рекомендуется):
service_account_key_file = "/home/vagrant/.config/yandex-cloud/sa-key.json"

# Если 'oauth', раскомментируй и вставь токен:
# yc_token = "y0_AQAAA...."

yc_cloud_id  = "b1gXXXXXXXXXXXXXXX"
yc_folder_id = "b1fYYYYYYYYYYYYYYY"

# --- Network ---
zone        = "ru-central1-a"
vpc_name    = "vpc-main"
subnet_cidr = "10.10.0.0/24"

# --- Image & SSH ---
image_family        = "ubuntu-2204-lts"
ssh_username        = "ubuntu"
ssh_public_key_path = "/home/vagrant/.ssh/id_ed25519.pub"  # абсолютный путь к *.pub

# --- Security Group ---
ingress_cidrs     = ["0.0.0.0/0"]   # в проде сузить!
ingress_tcp_ports = [80, 443]       # SSH 22 добавится автоматически

# --- Defaults for VMs ---
platform_id    = "standard-v3"
cores          = 2
memory_gb      = 2
disk_size_gb   = 20
preemptible    = false
public_ip_type = "ephemeral"        # none | ephemeral | static

# --- Набор ВМ ---
vms = {
  "app-1" = {}
  # "web-1" = { public_ip_type = "static", disk_size_gb = 40 }
}
